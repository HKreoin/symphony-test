{# Динамическая Bootstrap пагинация #}
<div class="d-flex justify-content-center">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            {% if pageCount > 1 %}
                {# Предыдущая страница #}
                {% if previous is defined and previous %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): previous})) }}" aria-label="Предыдущая">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link" aria-label="Предыдущая">
                            <span aria-hidden="true">&laquo;</span>
                        </span>
                    </li>
                {% endif %}

                {# Номера страниц #}
                {% for page in pagesInRange %}
                    {% if page == current %}
                        <li class="page-item active" aria-current="page">
                            <span class="page-link">{{ page }}</span>
                        </li>
                    {% else %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                        </li>
                    {% endif %}
                {% endfor %}

                {# Следующая страница #}
                {% if next is defined and next %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): next})) }}" aria-label="Следующая">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link" aria-label="Следующая">
                            <span aria-hidden="true">&raquo;</span>
                        </span>
                    </li>
                {% endif %}
            {% endif %}
        </ul>
    </nav>
</div>

<div class="text-center mt-3">
    <small class="text-muted">
        Страница {{ current }} из {{ pageCount }} ({{ totalCount }} записей)
    </small>
</div>