{% extends 'admin/base.html.twig' %}

{% block title %}Список книг{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Книги <span class="badge bg-secondary">{{ books.getTotalItemCount }}</span></h1>
    <a href="{{ path('admin_books_create') }}" class="btn btn-primary">Добавить книгу</a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Название</th>
                <th>Описание</th>
                <th>Автор</th>
                <th>Дата создания</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.description|slice(0, 100) }}{% if book.description|length > 100 %}...{% endif %}</td>
                <td>{{ book.authorName }}</td>
                <td>
                    <a href="{{ path('admin_books_edit', {id: book.id}) }}" class="btn btn-sm btn-outline-primary">Редактировать</a>
                    <form method="post" action="{{ path('admin_books_delete', {id: book.id}) }}" class="d-inline" onsubmit="return confirm('Вы уверены?')">
                        <button type="submit" class="btn btn-sm btn-outline-danger">Удалить</button>
                    </form>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6" class="text-center">Книги не найдены</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{# Пагинация #}
<div class="mt-4">
    {{ knp_pagination_render(books) }}
</div>
{% endblock %}
