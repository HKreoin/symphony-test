{% extends 'admin/base.html.twig' %}

{% block title %}Редактировать автора{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Редактировать автора</h1>
    <a href="{{ path('admin_authors_list') }}" class="btn btn-secondary">Назад к списку</a>
</div>

<form method="post">
    <div class="mb-3">
        <label for="name" class="form-label">Имя автора</label>
        <input type="text" class="form-control" id="name" name="name" value="{{ author.name }}" required>
    </div>
    
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
{% endblock %}
